@model IEnumerable<HotelManagmentSytem.Models.Reservations>

@{
    ViewBag.Title = "Reservations";
}

<h2>Reservations</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm("Index", "Reservations", FormMethod.Get))
{
    <b> Search Option: </b>@Html.RadioButton("option", "reservation_id") <text>Res Id </text> @Html.RadioButton("option", "client_id") <text>Client Id</text>
    @Html.RadioButton("option", "room_id") <text>Room Id</text>
    @Html.RadioButton("option", "all") <text>Show all</text> @Html.TextBox("search")
    <input type="submit" name="submit" value="Search" />
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.reservation_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.client_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.room_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.check_in_date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.check_out_date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.deposit_type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.total_amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.is_paid)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.reservation_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.client_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.room_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.check_in_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.check_out_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.deposit_type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.total_amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.is_paid)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.reservation_id }) |
                @Html.ActionLink("Details", "Details", new { id = item.reservation_id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.reservation_id })
            </td>
        </tr>
    }

</table>
